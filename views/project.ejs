<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - HO YI AN JEROME</title>
    <meta name="description" content="<%= project.short %>">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="<%= project.title %> - HO YI AN JEROME">
    <meta property="og:description" content="<%= project.short %>">
    <meta property="og:image" content="<%= project.featured %>">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Devicons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Abstract Animated Background -->
    <div class="animated-background">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
        <div class="shape shape-5"></div>
    </div>

    <!-- Cursor Trail Canvas -->
    <canvas id="cursorCanvas"></canvas>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="logo">HO YI AN JEROME</div>
        <ul class="nav-links">
            <li><a href="/#ueber-mich">About</a></li>
            <li><a href="/#leistung">Services</a></li>
            <li><a href="/#projekte">Projects</a></li>
            <li><a href="/#kontakt">Contact</a></li>
        </ul>
        <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
            <div class="toggle-track">
                <div class="toggle-thumb">
                    <span class="icon sun-icon">‚òÄÔ∏è</span>
                    <span class="icon moon-icon">üåô</span>
                </div>
            </div>
        </button>
    </nav>

    <!-- Project Detail Page -->
    <main class="project-detail-page">
        <!-- Back Button -->
        <div class="container">
            <a href="/#projekte" class="back-button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Back to Projects
            </a>
        </div>

        <!-- Hero Section -->
        <section class="project-hero">
            <div class="container">
                <div class="project-hero-content">
                    <div class="project-meta">
                        <span class="project-category"><%= project.category %></span>
                        <span class="project-date"><%= project.date %></span>
                    </div>
                    <h1 class="project-title"><%= project.title %></h1>
                    <p class="project-short"><%= project.short %></p>
                    
                    <div class="project-links">
                        <% if (project.live) { %>
                        <a href="<%= project.live %>" target="_blank" rel="noopener" class="btn btn-primary">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <path d="M10 6H6C4.89543 6 4 6.89543 4 8V18C4 19.1046 4.89543 20 6 20H16C17.1046 20 18 19.1046 18 18V14M14 4H20M20 4V10M20 4L10 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            View Live
                        </a>
                        <% } %>
                        <% if (project.repo) { %>
                        <a href="<%= project.repo %>" target="_blank" rel="noopener" class="btn btn-secondary">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                <path d="M9 19C4 20.5 4 16.5 2 16M16 22V18.13C16.0375 17.6532 15.9731 17.1738 15.811 16.7238C15.6489 16.2738 15.3929 15.8634 15.06 15.52C18.2 15.17 21.5 13.98 21.5 8.52C21.4997 7.12383 20.9627 5.7812 20 4.77C20.4559 3.54851 20.4236 2.19835 19.91 1C19.91 1 18.73 0.650001 16 2.48C13.708 1.85882 11.292 1.85882 9 2.48C6.27 0.650001 5.09 1 5.09 1C4.57638 2.19835 4.54414 3.54851 5 4.77C4.03013 5.7887 3.49252 7.14346 3.5 8.55C3.5 13.97 6.8 15.16 9.94 15.55C9.611 15.89 9.35726 16.2954 9.19531 16.7399C9.03335 17.1844 8.96681 17.6581 9 18.13V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            View Code
                        </a>
                        <% } %>
                    </div>
                </div>

                <div class="project-hero-image">
                    <img src="<%= project.featured %>" alt="<%= project.title %>" loading="lazy">
                </div>
            </div>
        </section>

        <!-- Project Overview -->
        <section class="project-overview section">
            <div class="container">
                <div class="overview-grid">
                    <!-- Description -->
                    <div class="overview-section">
                        <h2>Project Overview</h2>
                        <p class="overview-text"><%= project.description %></p>
                    </div>

                    <!-- Tech Stack -->
                    <div class="overview-section">
                        <h3>Technologies Used</h3>
                        <div class="tech-tags">
                            <% project.tech.forEach(tech => { %>
                            <span class="tech-tag"><%= tech %></span>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="overview-section">
                        <h3>Key Features</h3>
                        <ul class="feature-list">
                            <% project.features.forEach(feature => { %>
                            <li>
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                                    <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                <%= feature %>
                            </li>
                            <% }); %>
                        </ul>
                    </div>

                    <!-- Challenges -->
                    <div class="overview-section">
                        <h3>Challenges & Learnings</h3>
                        <p class="overview-text"><%= project.challenges %></p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Gallery -->
        <section class="project-gallery section">
            <div class="container">
                <h2>Project Screenshots</h2>
                <div class="gallery-grid">
                    <% project.images.forEach((image, index) => { %>
                    <div class="gallery-item" data-index="<%= index %>">
                        <img src="<%= image %>" alt="<%= project.title %> screenshot <%= index + 1 %>" loading="lazy">
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="project-cta section">
            <div class="container">
                <div class="cta-card">
                    <h2>Interested in this project?</h2>
                    <p>Check out the live demo or explore the source code to see how it works.</p>
                    <div class="cta-buttons">
                        <% if (project.live) { %>
                        <a href="<%= project.live %>" target="_blank" rel="noopener" class="btn btn-primary">Visit Live Site</a>
                        <% } %>
                        <% if (project.repo) { %>
                        <a href="<%= project.repo %>" target="_blank" rel="noopener" class="btn btn-secondary">View on GitHub</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Navigation to Other Projects -->
        <section class="project-navigation section">
            <div class="container">
                <div class="nav-links-project">
                    <a href="/#projekte" class="nav-link-all">
                        View All Projects
                    </a>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-left">
                    <p>&copy; 2024 HO YI AN JEROME. All rights reserved.</p>
                </div>
                <div class="footer-right">
                    <a href="https://github.com/yourusername" target="_blank" rel="noopener">GitHub</a>
                    <a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener">LinkedIn</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
